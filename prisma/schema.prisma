generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id                       String    @id @default(uuid())
 firstName               String
  lastName                String
  email                    String    @unique @db.VarChar(99)
  password                 String?   @db.VarChar(100)
  refreshToken             String?
  role                     user_role @default(USER)
  emailVerified            DateTime?
  emailVerificationToken   String?   @db.VarChar(100)
  emailVerificationExpires DateTime?
  passwordResetToken       String?   @db.VarChar(100)
  passwordResetExpires     DateTime?
  image                    String?
  createdAt                DateTime  @default(now())
  updatedAt                DateTime  @updatedAt

  carts    Cart[]    @relation("UserCarts")
  orders   Order[]   @relation("UserOrders")
  payments Payment[]
}

enum user_role {
  ADMIN
  USER
}

model product {
  productId   String   @id @default(uuid())
  name        String   @db.VarChar(99)
  description String   @db.VarChar(500)
  price       Decimal  @db.Decimal(10, 2)
  discount    Decimal? @db.Decimal(5, 2)
  category    String   @db.VarChar(50)
  tags        String[] @db.Text
  slug        String   @unique @db.VarChar(120)   
  image       String   @db.VarChar(255)
  stock       Int      @default(0)
  attributes  Json?
  reviews     Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  inventory Inventory? @relation("ProductInventory")
}

model Cart {
  cartId    String   @id @default(uuid())
  userId    String?
  user      user?    @relation("UserCarts", fields: [userId], references: [id])
  sessionId String?  @db.VarChar(100)
  items     Json
  total     Decimal  @default(0.0) @db.Decimal(10, 2)
  discount  Decimal? @db.Decimal(5, 2)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Order {
  orderId     String @id @default(uuid())
  orderNumber String @unique
  userId      String
  user        user   @relation("UserOrders", fields: [userId], references: [id])

  items           OrderItem[]
  total           Decimal     @db.Decimal(10, 2)
  status          OrderStatus @default(PENDING)
  billingAddress  Json?
  shippingAddress Json?
  paymentMethod   String?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  payment Payment? @relation("OrderPayment")
}

model OrderItem {
  id         String  @id @default(uuid())
  orderId    String
  order      Order   @relation(fields: [orderId], references: [orderId])
  productId  String
  name       String
  price      Decimal @db.Decimal(10, 2)
  quantity   Int
  attributes Json?
}

enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}

model Category {
  categoryId  String   @id @default(uuid())
  name        String   @unique @db.VarChar(99)
  type        String   @db.VarChar(50)
  description String?  @db.VarChar(255)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model BlogPost {
  postId        String    @id @default(uuid())
  title         String    @db.VarChar(150)
  content       String    @db.Text
  author        String    @db.VarChar(99)
  categories    String[]  @db.Text
  tags          String[]  @db.Text
  publishedDate DateTime  @default(now())
  comments      Comment[] @relation("PostComments")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Comment {
  commentId String   @id @default(uuid())
  postId    String
  post      BlogPost @relation("PostComments", fields: [postId], references: [postId])
  author    String   @db.VarChar(99)
  content   String   @db.VarChar(500)
  approved  Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Inventory {
  id        String   @id @default(uuid())
  productId String   @unique
  product   product  @relation("ProductInventory", fields: [productId], references: [productId])
  stock     Int      @default(0)
  reserved  Int      @default(0)
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

model Payment {
  id            String   @id @default(uuid())
  orderId       String   @unique
  userId        String
  method        String // 'JAZZCASH' | 'BANK'
  amount        Float
  status        String   @default("PENDING") // 'PENDING' | 'SUCCESS' | 'FAILED'
  transactionId String?
  reference     String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user  user  @relation(fields: [userId], references: [id])
  order Order @relation("OrderPayment", fields: [orderId], references: [orderId])
}
